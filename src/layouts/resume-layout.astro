---
import { SITE_TITLE } from '~/consts'
import BaseHead from '~/components/base-head.astro'

type Props = {
  class?: string
}

const { class: className } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`Resume | ${SITE_TITLE}`}
      description="Software Developer with over 7 years of experience specializing in building web apps and microservices. Passionate about leveraging web standards to create accessible and intuitive user experiences that perform at scale."
    />
  </head>
  <body class={className}>
    <slot />
  </body>
</html>
