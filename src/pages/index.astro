---
import { SITE_DESCRIPTION, SITE_TITLE } from '~/consts'
import FullWidthLayout from '~/layouts/full-width-layout.astro'
import { Button } from '~/components/button'
import Header from '~/components/header.astro'
import Footer from '~/components/footer.astro'
import { Image } from 'astro:assets'
---

<FullWidthLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <Header />
  <div class="w-full bg-white dark:bg-zinc-900">
    <div class="relative">
      <div class="mx-auto max-w-7xl">
        <div class="relative z-10 xl:min-h-svh xl:w-full xl:max-w-2xl">
          <svg
            viewBox="0 0 100 100"
            preserveAspectRatio="none"
            aria-hidden="true"
            class="absolute inset-y-0 right-8 hidden h-full w-80 translate-x-1/2 transform fill-white xl:block dark:fill-zinc-900"
          >
            <polygon points="0,0 90,0 50,100 0,100"></polygon>
          </svg>

          <div
            class="relative flex items-center px-6 py-32 sm:py-40 xl:px-8 xl:py-56 xl:pr-0"
          >
            <div class="mx-auto w-full max-w-2xl xl:mx-0 xl:max-w-prose">
              <!-- Learn more CTA - commented out for now -->
              <!-- <div class="hidden sm:mb-10 sm:flex">
                <div
                  class="relative rounded-full px-3 py-1 text-sm/6 text-zinc-500 dark:text-zinc-400 ring-1 ring-zinc-900/10 dark:ring-zinc-700/50 hover:ring-zinc-900/20 dark:hover:ring-zinc-700/70"
                >
                  Full-stack software engineer building modern web applications.
                  <a
                    href="/about"
                    class="font-semibold whitespace-nowrap text-blue-600 dark:text-blue-400"
                  >
                    <span aria-hidden="true" class="absolute inset-0"></span>Learn more <span aria-hidden="true">&rarr;</span>
                  </a>
                </div>
              </div> -->
              <h1
                class="text-5xl font-bold tracking-tight text-pretty text-zinc-900 sm:text-7xl dark:text-zinc-50"
              >
                Allen Hansen
              </h1>
              <!-- <p
                class="mt-6 max-w-lg text-base leading-7 text-zinc-600 dark:text-zinc-400"
              >
                I enjoy building software and solving problems through code.
              </p> -->
              <div class="mt-10 flex items-center gap-x-4">
                <Button as="a" href="/about" variant="primary" client:load>
                  Learn more
                </Button>
                <Button as="a" href="/blog" variant="text" client:load>
                  Read blog â†’
                </Button>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div
        class="relative bg-gray-50 xl:absolute xl:inset-y-0 xl:right-0 xl:w-1/2 dark:bg-zinc-800"
      >
        <!-- Portrait image for very small devices and XL+ two-column -->
        <Image
          src="https://3btsl78yt5bejpit.public.blob.vercel-storage.com/allen-cover-portait-rbu7lrpm4HUkfXyVLeBTASfFCQbi2Q.jpg"
          alt="Allen Hansen"
          width={1200}
          height={1600}
          class="aspect-3/4 object-cover sm:hidden xl:block xl:aspect-auto xl:size-full"
          loading="eager"
          format="webp"
        />
        <!-- Landscape image for small to large devices -->
        <Image
          src="https://3btsl78yt5bejpit.public.blob.vercel-storage.com/allen-cover-landscape-VZYrL1JIzwv2WGFGX9iAY3LISLKsJ0.jpg"
          alt="Allen Hansen"
          width={1600}
          height={900}
          class="hidden aspect-video object-cover sm:block xl:hidden"
          loading="eager"
          format="webp"
        />
        <!-- Glassy overlay for color balance -->
        <div
          class="absolute inset-0 bg-gradient-to-br from-emerald-500/8 via-transparent to-zinc-900/15 dark:from-emerald-400/10 dark:via-zinc-800/30 dark:to-zinc-900/40"
          aria-hidden="true"
        >
        </div>
      </div>
    </div>
  </div>
  <Footer />
</FullWidthLayout>
