---
import { SITE_DESCRIPTION, SITE_TITLE } from '~/consts'
import FullWidthLayout from '~/layouts/full-width-layout.astro'
import { Button } from '~/components/button'
import Header from '~/components/header.astro'
import Footer from '~/components/footer.astro'
import { Image } from 'astro:assets'

import portraitImage from '~/assets/images/allen-cover-portrait.webp'
import landscapeImage from '~/assets/images/allen-cover-landscape.webp'
---

<FullWidthLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <Header />
  <div class="bg-white dark:bg-zinc-900">
    <div
      class="relative isolate overflow-hidden bg-linear-to-b from-zinc-100/20 dark:from-zinc-950/10"
    >
      <div
        class="mx-auto max-w-7xl pt-10 pb-24 sm:pb-32 lg:grid lg:grid-cols-2 lg:items-center lg:gap-x-8 lg:px-8 lg:py-40"
      >
        <div class="px-6 lg:px-0 lg:pt-0">
          <div class="mx-auto max-w-2xl">
            <div class="max-w-lg">
              <h1
                class="mt-10 text-5xl font-semibold tracking-tight text-pretty text-zinc-900 sm:text-7xl dark:text-white"
              >
                Allen Hansen
              </h1>
              <p
                class="mt-8 text-lg font-normal text-pretty text-zinc-500 sm:text-xl/8 dark:text-zinc-400"
              >
                I love building software and solving complex problems through
                elegant code. Full-stack engineer passionate about creating
                modern web applications that make a difference.
              </p>
              <div class="mt-10 flex items-center gap-x-6">
                <Button variant="badge" as="a" href="/about">
                  Learn more
                </Button>
                <a
                  href="/blog"
                  class="text-sm/6 font-semibold text-zinc-900 dark:text-white"
                  >Read blog <span aria-hidden="true">â†’</span></a
                >
              </div>
            </div>
          </div>
        </div>
        <div
          class="mt-20 px-6 sm:mt-24 md:mx-auto md:max-w-2xl lg:mx-0 lg:mt-0 lg:w-screen lg:px-0"
        >
          <div
            aria-hidden="true"
            class="absolute inset-y-0 right-1/2 -z-10 -mr-10 w-[200%] skew-x-[-30deg] bg-white shadow-xl ring-1 shadow-zinc-600/10 ring-zinc-50 md:-mr-20 lg:-mr-36 dark:bg-zinc-800/30 dark:shadow-zinc-400/10 dark:ring-white/5"
          >
          </div>
          <div class="mx-auto max-w-2xl md:mx-0 md:max-w-none">
            <!-- Portrait image for very small devices and XL+ two-column -->
            <!-- <Image
              src={portraitImage}
              alt="Allen Hansen"
              width={1200}
              height={1600}
              class="aspect-3/4 object-cover sm:hidden xl:block xl:aspect-square xl:size-full xl:rounded-3xl"
              loading="eager"
              format="webp"
            /> -->
            <!-- Landscape image for small to large devices -->
            <!-- <Image
              src={landscapeImage}
              alt="Allen Hansen"
              width={1600}
              height={900}
              class="hidden aspect-video object-cover sm:block sm:rounded-3xl xl:hidden"
              loading="eager"
              format="webp"
            /> -->

            <!-- Portrait image for very small devices and XL+ two-column -->
            <Image
              src={portraitImage}
              alt="Allen Hansen"
              width={1200}
              height={1600}
              class="aspect-3/4 rounded-3xl object-cover sm:hidden xl:block xl:aspect-square xl:size-full"
              loading="eager"
              format="webp"
            />
            <!-- Landscape image for small to large devices -->
            <Image
              src={landscapeImage}
              alt="Allen Hansen"
              width={1600}
              height={900}
              class="hidden aspect-video rounded-3xl object-cover sm:block xl:hidden"
              loading="eager"
              format="webp"
            />
          </div>
        </div>
      </div>
      <div
        class="absolute inset-x-0 bottom-0 -z-10 h-24 bg-linear-to-t from-white sm:h-32 dark:from-zinc-900"
      >
      </div>
    </div>
  </div>
  <Footer />
</FullWidthLayout>
